@{
    string UIName = "";
    if (Model != null && Model is string)
    {
        UIName = (string)Model;
    }
}

@Html.DevExpress().CallbackPanel(
    settings =>
    {
        settings.Name = "CallbackPanel" + UIName;
        //settings.CallbackRouteValues = new { Controller = "DevHelper", Action = "LoadingPartial" };
        settings.SettingsLoadingPanel.ShowImage = false;
        settings.ControlStyle.Border.BorderStyle = System.Web.UI.WebControls.BorderStyle.None;
        settings.SettingsLoadingPanel.Text = (!string.IsNullOrEmpty(ViewBag.LoadingText)) ? ViewBag.LoadingText : ""; 
        if (ELMAR.DevHtmlHelper.Models.Util.IsMobileDevice(Request))
        {
            settings.SettingsLoadingPanel.Text = (!string.IsNullOrEmpty(ViewBag.LoadingText)) ? ViewBag.LoadingText : "Carregando...";
        }
        settings.Theme = ViewBag.Tema;
        settings.ClientSideEvents.BeginCallback = "function(s, e) { LoadingPanel" + UIName + ".Show(); }";
        settings.ClientSideEvents.EndCallback = "function(s, e) { LoadingPanel" + UIName + ".Hide(); }";
        settings.ControlStyle.HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign.Center;
        //settings.ControlStyle.VerticalAlign = System.Web.UI.WebControls.VerticalAlign.Middle;
        settings.ClientVisible = true;
        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        //settings.Height = System.Web.UI.WebControls.Unit.Percentage(100);
    }
).GetHtml()

