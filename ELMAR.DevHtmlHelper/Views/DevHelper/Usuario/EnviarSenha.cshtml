        @Html.Hidden("RedirectTo", ViewData["RedirectTo"]);
        @Html.Hidden("Login", ViewData["Login"]);
        @Html.Hidden("Codigo", ViewData["Codigo"]);
    
        Email:<p>@Html.TextBox("Email", ViewData["Email"], new { style="font-weight:bold;font-size:18px" } /*, new { Readonly = true}*/)</p>

        <input type="submit" value="ENVIAR" onclick="return confirmarAcao('')"/>  
     } 
<hr />
