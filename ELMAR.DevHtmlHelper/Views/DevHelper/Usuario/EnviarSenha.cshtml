<h2>@ViewBag.Titulo</h2>
<h4 style="color:#ff0000">@ViewBag.Msg</h4>
@using (Html.BeginForm("EnviaSenha"))
        { 

        @Html.Hidden("Perfil", ViewData["Perfil"]);
